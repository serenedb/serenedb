{
    "name": "serene-ui",
    "version": "0.1.0",
    "description": "Serene UI",
    "scripts": {
        "prettify": "npx prettier --write .",
        "prebuild": "npm rebuild better-sqlite3",
        "dev": "npm run prebuild && npm-run-all --parallel dev:*",
        "dev:shared-frontend": "npm run dev --workspace @serene-ui/shared-frontend",
        "dev:shared-backend": "npm run dev --workspace @serene-ui/shared-backend",
        "dev:shared-core": "npm run dev --workspace @serene-ui/shared-core",
        "dev:backend": "npm run dev --workspace apps/backend",
        "dev:web": "npm run dev --workspace apps/web",
        "build": "npm run prebuild && npm run build:shared && npm run build:backend && npm run build:web",
        "build:shared": "npm run build:shared:core && npm run build:shared:frontend && npm run build:shared:backend",
        "build:shared:core": "npm run build --workspace @serene-ui/shared-core",
        "build:shared:frontend": "npm run build --workspace @serene-ui/shared-frontend",
        "build:shared:backend": "npm run build --workspace @serene-ui/shared-backend",
        "build:backend": "npm run build --workspace apps/backend",
        "build:web": "npm run build --workspace apps/web",
        "docker:build:heavy": "docker build -t serene-ui:heavy .",
        "docker:build": "slim build --target serene-ui:heavy --tag serene-ui:latest --include-path /var/lib/nginx --include-path /run --include-path /app/backend/dist --include-path /app/node_modules --include-path /var/www --include-path /start.sh --include-path /usr/bin/supervisord --include-path /usr/bin/supervisorctl --include-path /usr/sbin/nginx"
    },
    "devDependencies": {
        "npm-run-all": "^4.1.5",
        "typescript": "^5.6.3",
        "rimraf": "^5.0.0"
    },
    "resolutions": {
        "react": "^19.1.1",
        "react-dom": "^19.1.1",
        "@types/react": "^19.1.13",
        "@types/react-dom": "^19.1.9"
    },
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "license": "Apache-2.0"
}
