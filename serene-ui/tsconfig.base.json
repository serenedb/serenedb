{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "inlineSources": true,
        "composite": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@serene-ui/shared-core/*": ["packages/shared-core/src/*"],
            "@serene-ui/shared-backend/*": ["packages/shared-backend/src/*"],
            "@serene-ui/shared-frontend/*": ["packages/shared-frontend/src/*"]
        }
    },
    "compileOnSave": false
}
